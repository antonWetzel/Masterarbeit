{
	"[typst]": {
		"editor.wordWrap": "on",
		"editor.semanticHighlighting.enabled": true,
		"editor.tabSize": 4
	},
	"generic-lsp.configuration": [
		{
			"language": "typst",
			"lsp": "typst-languagetool-lsp",
			"options": {
				"bundled": true,
				// "host": "http://127.0.0.1",
				// "port": "8081",
				"on_change": true,
				"language": "de-DE",
				"dictionary": [
					"Normalen",
					"Voronoi-Diagramm",
					"LASzip",
					"LASzip-Format",
					"LAStools",
					"Octree",
					"Octrees",
					"Quadtree",
					"Eye-Dome-Lighting",
					"Renderzeit",
					"Ball-Pivoting",
					"Greedy-Algorithmus",
					"Out-of-Core",
					"Voxeln",
					"Teilvoxel",
					"Teilvoxeln",
					"Rendertechnik",
					"Tree",
					"Leaf-Knoten",
					"Root-Knoten",
					"Branch-Knoten",
					"Importer",
					"Flag",
					"importer",
					"viewer",
					"wgpu",
					"Wetzel",
					"Nauber",
					"MÃ¤der",
					"ALS-",
					"ULS",
					"ULS-",
					"ULS-Daten",
					"LASviewer",
					"treee",
				],
				"rules": {
					"functions": {
						"number": {
							"before": "0",
						},
						"link": {
							"before": "https://link.com",
						},
						"link-footnote": {
							"before": "https://link.com",
						},
						"grid": {
							"after_argument": "\n\n",
						},
						"table": {
							"after_argument": "\n\n",
						},
						"tablex": {
							"after_argument": "\n\n",
						},
						"content": {
							"before": "\n\n",
						}
					},
					"arguments": {
						"caption": {
							"before": "\n\n",
							"after": "\n\n",
						},
						"doc": {
							"before": "\n\n",
							"after": "\n\n",
						}
					}
				},
				"disabled_checks": [
					"DOPPELTES_LEERZEICHEN",
					"WHITESPACE_RULE",
					"EINHEIT_LEERZEICHEN",
				],
			}
		}
	]
}
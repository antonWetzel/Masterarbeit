{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch files",
			"command": "typst-hunspell",
			"args": [
				"watch",
				"${workspaceFolder}",
				"--plain",
				"--language=de-DE",
				"--words=${workspaceFolder}/words.txt"
			],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typst-hunspell",
				"fileLocation": "absolute",
				"background": {
					"activeOnStart": false,
					"beginsPattern": "^START$",
					"endsPattern": "^END$"
				},
				"pattern": {
					"regexp": "^(.*) (\\d+):(\\d+)-(\\d+):(\\d+) (warning|error|info) (.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"endLine": 4,
					"endColumn": 5,
					"severity": 6,
					"message": 7
				}
			}
		},
		{
			"label": "watch expose",
			"command": "typst",
			"args": [
				"watch",
				"--diagnostic-format=short",
				"--root=${workspaceFolder}",
				"expose/main.typ",
				"expose/expose.pdf"
			],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "watch arbeit",
			"command": "typst",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"args": [
				"watch",
				"--diagnostic-format=short",
				"--root=${workspaceFolder}",
				"arbeit/main.typ",
				"arbeit/arbeit.pdf"
			],
			"isBackground": true,
			"problemMatcher": []
		}
	]
}
